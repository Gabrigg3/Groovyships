<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="12" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="groovystudios.groovyships.controller.Register2Controller">

    <Label text="Crear Cuenta – Datos Adicionales" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <TextField fx:id="phoneField" promptText="Teléfono (opcional)" />
    <TextField fx:id="ageField" promptText="Edad" />
    <TextField fx:id="locationField" promptText="Ubicación (opcional)" />
    <TextField fx:id="photoField" promptText="URL Foto (obligatorio)" />
    <TextField fx:id="ageRangeField" promptText="Rango edad preferido (ej: 20-30)" />
    <TextField fx:id="bioField" promptText="Biografía (opcional)" />
    <TextField fx:id="interestsField" promptText="Intereses separados por coma" />

    <Button text="Crear Cuenta" onAction="#onFinish" maxWidth="150" />

</VBox>